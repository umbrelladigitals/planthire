// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GalleryImage {
  id        String   @id @default(cuid())
  title     String?
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Equipment {
  id             String            @id @default(cuid())
  name           String            @unique
  description    String?
  imageUrl       String?
  specifications Json?
  detailsPage    EquipmentDetail?
  dailyRate      Decimal?          @db.Decimal(10, 2) // Daily rental rate
  weeklyRate     Decimal?          @db.Decimal(10, 2) // Weekly rental rate
  monthlyRate    Decimal?          @db.Decimal(10, 2) // Monthly rental rate
  available      Boolean           @default(true) // Availability status for rental
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
}

// Optional: For more structured/rich content equipment details
model EquipmentDetail {
  id          String    @id @default(cuid())
  equipmentId String    @unique
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  content     String?   // Rich text content or markdown
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ContactSubmission {
  id        String   @id @default(cuid())
  fullName  String
  email     String
  phone     String?
  equipment String?  // Required equipment
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String? // Panel girişi için e-posta/şifre kullanacaksak
  isAdmin       Boolean   @default(false)
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? // @db.Text
  access_token      String? // @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? // @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

